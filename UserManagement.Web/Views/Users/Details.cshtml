@model UserManagement.Models.User
<h3>User Details</h3>

<dl class="row">
    <dt class="col-3">Forename</dt>
    <dd class="col-9">@Model.Forename</dd>
    <dt class="col-3">Surname</dt>
    <dd class="col-9">@Model.Surname</dd>
    <dt class="col-3">Email</dt>
    <dd class="col-9">@Model.Email</dd>
    <dt class="col-3">Date of Birth</dt>
    <dd class="col-9">@Model.DateOfBirth?.ToString("dd-MM-yyyy")</dd>
    <dt class="col-3">Active</dt>
    <dd class="col-9">@Model.IsActive</dd>
</dl>

@if (ViewBag.Logs is IEnumerable<UserManagement.Models.Log> logs && logs.Any())
{
    <h4 class="mt-4">History</h4>
    <table class="table table-sm">
        <thead><tr><th>Date&nbsp;(UTC)</th><th>Action</th><th>Details</th></tr></thead>
        <tbody>
            @foreach (var log in logs)
            {
                <tr>
                    <td>@log.WhenUtc.ToString("yyyy-MM-dd HH:mm")</td>
                    <td>@log.Action</td>
                    <td>@log.Details</td>
                </tr>
            }
        </tbody>
    </table>
}

<a asp-action="List" class="btn btn-secondary mt-3">Back</a>
